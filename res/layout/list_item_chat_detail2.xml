<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_you"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_receive_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/msg_incoming"
            android:text="asodifjaasodifjaasodifjaodifjaasodifjaodifjaasodifjaasodifjaasodifja"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_receive_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="2015/11/11"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_send_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="2015/11/11"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_send_body"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/msg_outgoing"
            android:text="jaasaasodifjaasaasododifjaasodifjaodifjaasodifjaodifjaasodifjaasodifjaaifjaasa"
            android:textColor="#000" />
        <ImageView
            android:id="@+id/iv_me"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_launcher" />
    </LinearLayout>

</LinearLayout>